<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nathan.locationservicesapp.MainActivity"
    tools:showIn="@layout/activity_main"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:text="Automatically Refreshing Location"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:layout_gravity="center_horizontal" />

    <TextView android:id="@+id/refresh_lat"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:text="Getting Data..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentEnd="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_overflow_padding_end_material"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/refresh_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Getting Data..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_stacked_tab_max_width" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manually Refreshing Location"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Latest Location"
        android:id="@+id/getLocation"
        android:onClick="getCurrentLocation"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size" />

    <TextView android:id="@+id/manual_lat"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:text="Tap the Button!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/getLocation"
        android:layout_alignStart="@+id/refresh_message"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_overflow_padding_end_material"
        android:layout_gravity="right" />

    <TextView
        android:id="@+id/manual_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do it!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/getLocation"
        android:layout_alignStart="@+id/refresh_message"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
